<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/products/logo.jpg"/>
	
	<title> Chocolate el mejor</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<% if(locals.user){ %>
		<%- include("./partials/headerLogueado") %>
		<%} else {%>
		<%- include("./partials/header") %>
		<%}%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/products/lali.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.nombre  %>
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= usuario.products.length %>  productos</li>
						<li>632 seguidores</li>
						<li>504 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	
<!-- /Novedades -->
<!-- Más comentados -->
<div class="container products-wrapper">
<div class="row">
	<div class="col-12">
		<h2 class="products-title">Mis productos</h2>
	</div>
	<!-- Show the "ultimos" products -->

	<% for (const product of usuario.products) { %>
		<div class="col-12 col-sm-6 col-lg-3">
		  <section class="product-box">
			<a href="/chocolates/id/<%= product.id %> ">
			  <figure class="product-box_image">
				<img src= "/images/products/<%=product.image %>" alt="">
			  </figure>
			  <article class="product-box_data">
				<p><a href="/users/id/<%= usuario.id %> ">Añadido por <%= usuario.nombre + ' ' + usuario.apellido%> </a></p>
			  </article>
			</a>
		  </section>
		</div>
		<%}%>
</div>
</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %> 
	<!-- /footer -->
</body>	
</html>